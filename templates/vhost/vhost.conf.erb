# File Managed by Puppet

server {
  listen <%= @port %>; 
  root  <%= @docroot %>;
  server_name <%= @name %> <%= @serveraliases %>;

  access_log  <%= scope.lookupvar('openresty::log_dir')%>/<%= @name %>.access.log;
  error_log  <%= scope.lookupvar('openresty::log_dir')%>/<%= @name %>.error.log;

}
